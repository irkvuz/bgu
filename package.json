{
  "name": "bgu",
  "version": "0.2.2",
  "description": "Schedule of Baikal Stete University",
  "main": "src/index.js",
  "repository": "https://github.com/irkvuz/bgu.git",
  "author": "Yury Savin <savinyurii@gmail.com>",
  "license": "MIT",
  "homepage": "https://bgu.irkvuz.ru",
  "private": false,
  "dependencies": {
    "@sentry/browser": "^5.11.2",
    "@types/jest": "^25.1.1",
    "@types/node": "13.5.3",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.0.0",
    "antd": "3.26.7",
    "axios": "0.19.2",
    "babel-plugin-import": "^1.12.2",
    "customize-cra": "^0.9.1",
    "eslint": "^6.1.0",
    "history": "4.10.1",
    "moment": "2.24.0",
    "prop-types": "^15.7.2",
    "react": "16.12.0",
    "react-app-rewired": "^2.1.5",
    "react-dom": "16.12.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.3.1",
    "react-yandex-metrika": "2.6.0",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@size-limit/preset-app": "4.0.0",
    "@testing-library/react": "9.4.0",
    "@types/progress": "2.0.3",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jest": "23.6.0",
    "gh-pages": "2.2.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "progress": "2.0.3",
    "size-limit": "4.0.0",
    "source-map-explorer": "2.3.1",
    "ts-node": "8.6.2"
  },
  "scripts": {
    "next": "yarn version --patch",
    "postversion": "git push --tags && git push",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "size": "size-limit",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "predeploy": "yarn build",
    "upload": "gh-pages -d build",
    "deploy": "yarn upload",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "updateSchedule": "ts-node --project scripts/tsconfig.json scripts/updateSchedule.ts",
    "commitSchedule": "git add public/data/ && git commit -m 'Update schedule'",
    "findTrimesterId": "ts-node --project scripts/tsconfig.json scripts/findTrimesterId.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "samsung 4"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "build/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "size-limit": [
    {
      "path": "build/static/js/*.js",
      "limit": "250 KB"
    }
  ]
}
