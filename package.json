{
  "name": "bgu",
  "version": "0.2.2",
  "description": "Schedule of Baikal Stete University",
  "main": "src/index.js",
  "repository": "https://github.com/irkvuz/bgu.git",
  "author": "Yury Savin <savinyurii@gmail.com>",
  "license": "MIT",
  "homepage": "https://bgu.irkvuz.ru",
  "private": false,
  "dependencies": {
    "@sentry/browser": "5.15.5",
    "@types/jest": "25.2.2",
    "@types/node": "13.13.5",
    "@types/react": "16.9.34",
    "@types/react-dom": "16.9.7",
    "@types/react-router-dom": "5.1.5",
    "antd": "4.1.4",
    "axios": "0.19.2",
    "babel-plugin-import": "1.13.0",
    "customize-cra": "0.9.1",
    "date-fns": "2.13.0",
    "eslint": "^6.1.0",
    "history": "4.10.1",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-app-rewired": "2.1.6",
    "react-dom": "16.13.1",
    "react-router-dom": "5.1.2",
    "react-scripts": "3.4.1",
    "react-yandex-metrika": "2.6.0",
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "@size-limit/preset-app": "4.4.5",
    "@testing-library/react": "9.5.0",
    "@types/progress": "2.0.3",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.10.0",
    "gh-pages": "2.2.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "progress": "2.0.3",
    "size-limit": "4.4.5",
    "source-map-explorer": "2.4.2",
    "ts-node": "8.10.1"
  },
  "scripts": {
    "next": "yarn version --patch",
    "postversion": "git push --tags && git push",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "size": "size-limit",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "predeploy": "yarn build",
    "upload": "gh-pages -d build",
    "deploy": "yarn upload",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "updateSchedule": "ts-node --project scripts/tsconfig.json scripts/updateSchedule.ts",
    "commitSchedule": "git add public/data/ && git commit -m 'Update schedule'",
    "findTrimesterId": "ts-node --project scripts/tsconfig.json scripts/findTrimesterId.ts"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "samsung 4"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "build/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "size-limit": [
    {
      "path": "build/static/js/*.js",
      "limit": "250 KB"
    }
  ]
}
